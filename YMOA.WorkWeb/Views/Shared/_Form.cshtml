@using YMOA.WorkWeb.Resources
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css/framework", "~/Content/js/bootstrap/bootstrap.min.css")
    @*引入当页样式*@
    @RenderSection("css", required: false)
    @{
        string fileName = Request.FilePath.Substring(1).Replace('/', '@');
    }
</head>
<body>

    @RenderBody()
    @Scripts.Render("~/bundles/js_form", Url.Content("~/Scripts/Comm.js"),
    Url.Content(string.Format("~/Scripts/resx/{0}/{1}.js", Resource._culture, fileName)),
    Url.Content(string.Format("~/Scripts/{0}.js", fileName)))
    @*引入当页脚本*@
    @RenderSection("scripts", required: false)
</body>
</html>