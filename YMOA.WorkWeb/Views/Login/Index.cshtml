@using YMOA.WorkWeb.Resources
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>YM-WorkSystem</title>
    <link href="~/Content/css/framework-font.css" rel="stylesheet" />
    <link href="~/Content/css/framework-login.css" rel="stylesheet" />
    <link href="~/Content/User/User@login.css" rel="stylesheet" />
    <script src="~/Content/js/jquery/jquery-2.1.1.min.js"></script>
    <script src="~/Content/js/cookie/jquery.cookie.js"></script>
    <script src="~/Content/js/md5/jquery.md5.js"></script>
</head>
<body>
    <div class="wrapper">
        <div class="container">
            <div class="logo">
                <i class="fa fa-modx"></i>
                <h1>YM-WorkSystem</h1>
            </div>
            <form class="form">
                <div class="row">
                    <input id="txt_account" type="text" placeholder="@Resource.account" maxlength="16">
                    <i class="fa fa-user"></i>
                </div>
                <div class="row">
                    <input id="txt_password" type="password" placeholder="@Resource.passwrod" minlength="6" maxlength="24">
                    <i class="fa fa-key"></i>
                </div>
                <div class="row">
                    <input id="txt_code" maxlength="4" type="text" placeholder="@Resource.captcha" style="width: 190px; float: left;">
                    <div style="width: 110px; float: right; padding-top: 14px; padding-left: 14px;">
                        <a id="switchCode" href="javascript:;" style="text-decoration: none;">@Resource.changeone</a>
                        <img id="imgcode" class="authcode" src="~/Login/GetAuthCode" width="80" height="25" />
                    </div>
                </div>
                <div class="row">
                    <select id="sltLanguage">
                        <option value="zh-cn">中文</option>
                        <option value="en-us">English</option>
                    </select>
                    <input id="hidCulture" type="hidden" value="@Resource._culture" />
                </div>
                <div class="row">
                    <button id="login_button" type="button"><span>@Resource.login</span></button>
                </div>
                <div class="row">
                </div>
            </form>
            <div class="login_tips"></div>
        </div>
        <ul class="bg-bubbles">
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
        </ul>
    </div>
    <div class="copyright">
        @Resource.copyright
    </div>
    <script src="@Url.Content(string.Format("~/Scripts/resx/{0}/Login@Index.js", Resource._culture))"></script>
    <script type="text/javascript" src="~/Scripts/Login@Index.js"></script>
</body>
</html>
