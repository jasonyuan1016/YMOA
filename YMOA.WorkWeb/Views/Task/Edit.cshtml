@model YMOA.Model.TaskEntity
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<form id="TaskEidt">
    <div style="margin-top: 10px; margin-left: 10px; margin-right: 10px;">
        <div style="padding-top: 20px; margin-right: 30px;">
            <table class="form">
                <tr>
                    <th class="formTitle">任务名称</th>
                    <td class="formValue">
                        <input id="txtName" name="txtName" type="text" class="form-control required" placeholder="请输入名称" value="@Model.Name" />
                    </td>
                    <th class="formTitle">优先级</th>
                    <td class="formValue">
                        <select id="sltSort" name="sltSort" class="form-control" data-val="@Model.Sort"></select>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">所属项目</th>
                    <td class="formValue">
                        <select id="sltProjectId" name="sltProjectId" class="form-control">
                            @{
                                var products = ViewData["products"] as List<YMOA.Model.ProjectEntity>;
                                foreach (var pro in products)
                                {
                                    <option value="@pro.Name">@pro.ID</option>
                                }
                            }
                        </select>
                    </td>
                    <th class="formTitle">指派给</th>
                    <td class="formValue">
                        <select id="sltTeam" name="sltTeam" class="form-control">
                            <option>=== 指派人员 ===</option>
                            @{
                                var teams = ViewData["teams"] as List<YMOA.Model.TeamEntity>;
                                foreach (var pro in teams)
                                {
                                    <option value="@pro.Person">@pro.Person</option>
                                }
                            }
                        </select>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">最初预计/时</th>
                    <td class="formValue">
                        <input id="txtEstimate" type="text" name="txtEstimate" class="form-control required" value="@Model.Estimate" />
                    </td>
                    <th class="formTitle">截止日期</th>
                    <td class="formValue">
                        <input id="txtEndTime" type="text" class="form-control input-wdatepicker" autocomplete="off" onfocus="WdatePicker()" value="@Model.EndTime" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">抄送给</th>
                    <td class="formValue" colspan="3">
                        <select id="sltSend" name="sltSend" class="form-control" data-val="@Model.Send"></select>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle" valign="top" style="padding-top: 5px;">
                        附件
                    </th>
                    <td class="formValue" colspan="3">
                        <div class="input-group">
                            <input type="file" class="form-control" id="exampleInputAmount" placeholder="附件">
                            <div class="input-group-addon">标题</div>
                            <input type="text" class="form-control" id="exampleInputAmount" placeholder="标题名">
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="button">
                                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                                </button>
                            </span>
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="button">
                                    <span class="glyphicon glyphicon-minus" aria-hidden="true"></span>
                                </button>
                            </span>
                        </div>
                        <div class="input-group">
                            <input type="file" class="form-control" id="exampleInputAmount" placeholder="附件">
                            <div class="input-group-addon">标题</div>
                            <input type="text" class="form-control" id="exampleInputAmount" placeholder="标题名">
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="button">
                                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                                </button>
                            </span>
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="button">
                                    <span class="glyphicon glyphicon-minus" aria-hidden="true"></span>
                                </button>
                            </span>
                        </div>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle" valign="top" style="padding-top: 5px;">
                        描述
                    </th>
                    <td class="formValue" colspan="3">
                        <textarea id="texDescribe" name="texDescribe" class="form-control" style="height: 60px;">@Model.Describe</textarea>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle" valign="top" style="padding-top: 5px;">
                        备注
                    </th>
                    <td class="formValue" colspan="3">
                        <textarea id="texRemarks" name="texRemarks" class="form-control" style="height: 60px;">@Model.Remarks</textarea>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</form>
@section scripts {
    @Scripts.Render("~/Content/js/datepicker/WdatePicker.js")
}