@model YMOA.Model.TaskEntity
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
@Styles.Render("~/Content/bootstrap-select/css/bootstrap-select.min.css", "~/Content/css/from.css")
<form id="batchAdd" style="height:306px">
    <div style="margin-top: 10px; margin-left: 10px; margin-right: 10px;">
        <div style="padding-top: 10px">
            <table class="form bor-radius">
                <thead>
                    <tr>
                        <th style="width: 2%"></th>
                        <th style="width: 15%">名称</th>
                        <th style="width: 13%">指派给</th>
                        <th style="width: 20%">任务描述</th>
                        <th style="width: 13%">截止日期</th>
                        <th style="width: 8%">优先级</th>
                        <th style="width: 6%">预计</th>
                        <th style="width: 8%">操作</th>
                    </tr>
                </thead>
                <tbody id="batchTbody">
                    <tr hidden>
                        <td>(i)</td>
                        <td class="formValue">
                            <input type="text" class="form-control txtName" placeholder="请输入名称" autocomplete="off" id="txtName" />
                        </td>
                        <td class="formValue bor-radius">
                            <select class="form-control teams" multiple data-actions-box="true" id="sltTeams" name="sltTeams">($)</select>
                        </td>
                        <td class="formValue">
                            <textarea class="form-control texDescribe" rows="1" id="texDescribe"></textarea>
                        </td>
                        <td class="formValue">
                            <input type="text" class="form-control input-wdatepicker txtEndTime" autocomplete="off" onfocus="WdatePicker()" id="txtEndTime" />
                        </td>
                        <td class="formValue">
                            <select class="form-control input-select sltSort" id="sltSort">(%)</select>
                        </td>
                        <td class="formValue">
                            <input type="text" class="form-control txtEstimate isFloatGteZero" id="txtEstimate(i)" name="txtEstimate(i)" />
                        </td>
                        <td class="formValue">
                            <div class="btn-group" role="group">
                                <button type="button" class="btn btn-default plus"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></button>
                                <button type="button" class="btn btn-default minus"><span class="glyphicon glyphicon-minus" aria-hidden="true"></span></button>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</form>
@section scripts {
    @Scripts.Render("~/Content/js/datepicker/WdatePicker.js", "~/Content/bootstrap-select/js/bootstrap-select.min.js")
}